doctype html
extends ./index.jade

block append content
    div.container.signup
        h2.signup-title Sign Up
        form(action="/signup" method="POST")
            div.form-group
                label(for="user") User name:
                input(type="text" name="user").form-control#user
            div.form-group
                label(for="email") Email:
                input(type="email" name="email").form-control#email
            div.form-group
                label(for="pwd") Password:
                input(type="password" name="password").form-control#pwd
            button.btn.btn-default(type="submit") Submit